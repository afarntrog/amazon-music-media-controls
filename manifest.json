{
    "manifest_version": 2,
    "name": "Amazon music media controller",
    "version": "1.0",
    "description": "Amazon music media controls from any other tab. Simply click Alt+Left arrow key or right arrow to go to a prev or next song, respectively. This works even when you are inside another tab.",

    "permissions": [
      "tabs", "<all_urls>"
    ],

    "commands": {
      "prev-song" : {
          "suggested_key": {
               "default": "Alt + Left" 
          },
          "description": "prev song"
      },
      "next-song": {
          "suggested_key": {
              "default": "Alt + Right"
          },
          "description": "next song"
      }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },


      "icons": {
        "16": "images/icons8-spellcheck-16.png",
        "32": "images/icons8-spellcheck-32.png",
        "48": "images/icons8-spellcheck-48.png",
        "128": "images/icons8-spellcheck-100.png"
      }
  }